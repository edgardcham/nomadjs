{
  "name": "@loopfox/nomad",
  "version": "1.3.1",
  "description": "Nomad-style SQL migrations for Node.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgardcham/nomadjs.git"
  },
  "homepage": "https://github.com/edgardcham/nomadjs#readme",
  "bugs": {
    "url": "https://github.com/edgardcham/nomadjs/issues"
  },
  "keywords": [
    "migrations",
    "migration",
    "sql",
    "postgres",
    "postgresql",
    "cli",
    "database",
    "schema",
    "devops",
    "db-migrate"
  ],
  "bin": {
    "nomad": "./bin/nomad"
  },
  "preferGlobal": true,
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "nomad": "node ./dist/esm/cli.js",
    "nomad:status": "npm run nomad -- status",
    "nomad:up": "npm run nomad -- up",
    "nomad:down": "npm run nomad -- down",
    "nomad:to": "npm run nomad -- to",
    "nomad:create": "npm run nomad -- create"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "mysql2": "^3.15.1",
    "pg": "^8.12.0",
    "picocolors": "^1.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.6.0",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "license": "MIT"
}
