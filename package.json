{
  "name": "nomadjs",
  "version": "0.1.0",
  "description": "Nomad-style SQL migrations for Node.js",
  "type": "module",
  "bin": {
    "nomad": "./bin/nomad"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "nomad": "node ./dist/esm/cli.js",
    "nomad:status": "npm run nomad -- status",
    "nomad:up": "npm run nomad -- up",
    "nomad:down": "npm run nomad -- down",
    "nomad:to": "npm run nomad -- to",
    "nomad:create": "npm run nomad -- create"
  },
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "pg": "^8.12.0",
    "yargs": "^18.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.17.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "license": "MIT"
}
