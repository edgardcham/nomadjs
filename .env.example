# Example environment variables for NomadJS
# Copy this to .env for local development

# Option 1: Full database URL
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Option 2: Separate database components (used with ${VAR} in config)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nomaddb

# NomadJS specific overrides
NOMAD_DATABASE_URL=postgresql://user:password@localhost:5432/dbname
NOMAD_MIGRATIONS_DIR=./migrations
NOMAD_DB_TABLE=schema_migrations

# Emergency flag (NOT FOR PRODUCTION)
# NOMAD_ALLOW_DRIFT=true